{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "The user management service",
    "homepage": "https://github.com/Jenil45/mernplus-be-auth-service#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jenil45/mernplus-be-auth-service.git"
    },
    "license": "ISC",
    "author": "Jenil Thakor (jenil.rohit45@gmail.com)",
    "type": "commonjs",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch src/server.ts",
        "build": "tsc",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "jest --no-cache --coverage --all --runInBand",
        "test:watch": "jest --watch --runInBand",
        "test:dev": "jest --watch --runInBand ./tests/users/create.spec.ts",
        "prepare": "husky",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate",
        "migration:run": "typeorm-ts-node-commonjs migration:run",
        "migration:create": "typeorm-ts-node-commonjs migration:create",
        "migration:revert": "npm run typeorm -- migration:revert -d src/config/data-source.ts"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.6",
        "@types/express-validator": "^3.0.2",
        "@types/http-errors": "^2.0.5",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jwks-rsa": "^3.2.0",
        "lint-staged": "^14.0.1",
        "mock-jwks": "^1.0.10",
        "nock": "^14.0.10",
        "nodemon": "^3.1.11",
        "prettier": "3.7.4",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typeorm-ts-node-commonjs": "^0.3.20",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-jwt": "^8.5.1",
        "express-validator": "^7.3.1",
        "http-errors": "^2.0.1",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rsa-pem-to-jwk": "^1.1.3",
        "tslib": "^2.8.1",
        "typeorm": "^0.3.17",
        "winston": "^3.19.0"
    }
}
